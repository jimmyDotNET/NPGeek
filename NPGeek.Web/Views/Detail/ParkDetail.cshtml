    <form action="@Url.Action("ParkDetail", "Detail")" method="post">
        <input type="hidden" name="session" value="PartialWeather">
        <label for="tempChoice">Select Temperature</label>
        <select name="tempChoice">
            <option value="Celcius">Celcius</option>
            <option value="Fahrenheit">Fahrenheit</option>
        </select>
        <button>GO!</button>
    </form>
    

    @if ((Model.TempChoice != null) && (Model.TempChoice == "Fahrenheit"))
    {
        @Html.Action("PartialWeather", new { id = Model.ParkTempModel.ParkCode });

    }
    else
    {
        @Html.Action("PartialWeatherF", new { id = Model.ParkTempModel.ParkCode });
    }



</section>
